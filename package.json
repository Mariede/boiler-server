  "devDependencies": {
    "clean-webpack-plugin": "^2.0.2",
    "copy-webpack-plugin": "^5.0.3",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "generate-package-json-webpack-plugin": "^1.0.0",
    "nodemon": "^1.19.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-node-externals": "^1.7.2"
  },
  "scripts": {
    "serve": "cls && nodemon API/aplicacao.js",
    "proxy": "cls && nodemon _proxy/proxyStart.js",
