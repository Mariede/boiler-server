{
	"server": {
		"host": "0.0.0.0",
		"port": 5000,
		"backlog": 511,
		"maxConnections": 50,
		"timeout": 0,
		"keepAliveTimeout": 60,
		"maxHeadersCount": 2000,
		"headersTimeout": 65,
		"eventLoopMonitor": false,
		"clustered": false,
		"saveRouteLogs": true,
		"routePrefix": "/",
		"showFrontEndStackTraceErr": false,
		"secure": {
			"isHttps": true,
			"redirectHttpToHttpsPort": 80,
			"certFolder": "/cert",
			"certKey": "cert.key",
			"certPublic": "cert.pem"
		},
		"pathVirtualStaticFiles": [
			{
				"virtualPath": "/css",
				"physicalPath": "/views/server-side/assets/css",
				"maxAge": 0
			},
			{
				"virtualPath": "/img",
				"physicalPath": "/views/server-side/assets/images",
				"maxAge": 0
			},
			{
				"virtualPath": "/packages",
				"physicalPath": "/views/server-side/assets/packages",
				"maxAge": 0
			},
			{
				"virtualPath": "/",
				"physicalPath": "/views/client-side/public",
				"maxAge": 0
			}
		],
		"pathFavicon": "/views/server-side/assets/images/favicon.ico",
		"cors": {
			"origin": true,
			"methods": [
				"GET",
				"HEAD",
				"PUT",
				"PATCH",
				"POST",
				"DELETE"
			],
			"preflightContinue": false,
			"optionsSuccessStatus": 204,
			"credentials": true
		},
		"custom": {
			"fipe": {
				"disabled": true,
				"address": "http://fipeapi.appspot.com/api/1"
			},
			"permisys": {
				"address": "https://address-permisys-service.com",
				"siglaSistema": "SYS",
				"siglaModulo": "MY-MODULE",
				"headers": {
					"authorization": "Basic XPTO="
				}
			}
		},
		"fileUpload": {
			"path": "/uploads",
			"allowedFiles": ".gif:image/gif | .jpeg:image/jpeg | .jpg:image/jpeg | .png:image/png | .tiff:image/tiff | .svg:image/svg+xml | .webp:image/webp | .pdf:application/pdf | .txt:text/plain | .doc:application/msword | .docx:application/vnd.openxmlformats-officedocument.wordprocessingml.document"
		},
		"session": {
			"secret": [
				"SegredoIDCookies123",
				"Reforco1",
				"Reforco2"
			],
			"secretStore": "SegredoArquivos123",
			"cookieName": "cookie-server",
			"timeout": 20
		},
		"customErrors": []
	},
	"auth": {
		"sessWrapper": "userData",
		"authTipo": 1,
		"except": [
			"/egg",
			"/server",
			"/socket.io",
			"/logon",
			"/logoff",
			"/islogged"
		]
	},
	"socketIo": {
		"serverHost": "0.0.0.0",
		"serverPort": 5001,
		"path": "/socket.io",
		"changeOrigin": true
	},
	"crypto": {
		"hashAlgorithm": "sha512",
		"hashDigestEncoding": "hex",
		"encryptInputEncoding": "utf8",
		"encryptOutputEncoding": "hex",
		"encryptAlgorithm": "aes-192-cbc",
		"encryptKeyLen": 24
	},
	"db": {
		"msSqlServer": {
			"connectionType": 1,
			"configDb": {
				"user": "user",
				"password": "pass",
				"server": "server",
				"port": 1433,
				"database": "database",
				"connectionTimeout": 15000,
				"requestTimeout": 15000,
				"stream": true,
				"parseJSON": true,
				"options": {
					"abortTransactionOnError": true,
					"enableArithAbort": true,
					"useUTC": false,
					"encrypt": false,
					"instanceName": ""
				},
				"pool": {
					"max": 10,
					"min": 0,
					"idleTimeoutMillis": 30000
				}
			}
		},
		"mongoose": {
			"connectionString": "mongodb://user:pass@10.28.10.21:27017/database?retryWrites=true&w=majority",
			"configDb": {
				"useNewUrlParser": true,
				"useFindAndModify": false,
				"useCreateIndex": true,
				"useUnifiedTopology": true,
				"serverSelectionTimeoutMS": 5000,
				"bufferMaxEntries": 0,
				"autoIndex": true,
				"keepAlive": true,
				"poolSize": 10,
				"connectTimeoutMS": 15000,
				"socketTimeoutMS": 45000,
				"authSource": "nodetest"
			},
			"configSchema": {
				"bufferCommands": false,
				"collation": {
					"locale": "pt",
					"strength": 2
				},
				"timestamps": {
					"createdAt": "dataCriacao",
					"updatedAt": "dataAlteracao"
				}
			}
		}
	},
	"email": {
		"fromName": "Boiler-Server",
		"queue": {
			"on": false,
			"saveFullLogs": false,
			"path": "/queue/mail/send",
			"fileExtension": ".send",
			"limitPerRound": 160,
			"timeCheck": 32000,
			"timeFirstCheck": 4000
		},
		"transporter": {
			"pool": true,
			"maxConnections": 5,
			"maxMessages": 160,
			"rateDelta": 1000,
			"rateLimit": 5,
			"socketTimeout": 64000,
			"host": "smtp.example.com",
			"port": 587,
			"secure": false,
			"authMethod": "PLAIN",
			"auth": {
				"type": "login",
				"user": "user",
				"pass": "pass"
			}
		}
	}
}
