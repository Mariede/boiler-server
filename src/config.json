{
	"server": {
		"isHttps": false,
		"host": "localhost",
		"port": 5000,
		"backlog": 511,
		"maxConnections": 50,
		"timeout": 240,
		"keepAliveTimeout": 60,
		"maxHeadersCount": 2000,
		"headersTimeout": 65,
		"eventLoopMonitor": false,
		"clustered": false,
		"saveRouteLogs": true,
		"routePrefix": "/",
		"pathVirtualStaticFiles": [{ "virtualPath": "/img", "physicalPath": "/views/serverSide/assets/images", "maxAge": 0 },{ "virtualPath": "/css", "physicalPath": "/views/serverSide/assets/css", "maxAge": 0 }],
		"pathFavicon": "/views/serverSide/assets/images/favicon.ico",
		"cors": {
			"origin": "*",
			"methods": ["GET","HEAD","PUT","PATCH","POST","DELETE"],
			"preflightContinue": false,
			"optionsSuccessStatus": 204,
			"credentials": true
		},
		"custom": {
			"permisys": {
				"address": "https://address-permisys-service.com",
				"siglaSistema": "SYS",
				"idModulo": 15,
				"headers": {
					"authorization": "Basic XPTO="
				}
			}
		},
		"fileUpload": {
			"path": "/uploads",
			"allowedExtensions": ".gif:image/gif | .jpeg:image/jpeg | .jpg:image/jpeg | .png:image/png | .pdf:application/pdf | .txt:text/plain | .doc:application/msword | .docx:application/vnd.openxmlformats-officedocument.wordprocessingml.document",
			"maxFileSize": 5242880
		},
		"session": {
			"secret": ["SegredoIDCookies123", "Reforco1", "Reforco2"],
			"secretStore": "SegredoArquivos123",
			"cookieName": "cookie-server",
			"timeout": 20
		},
		"_comments1": "backlog (default 511), maxConnections (default depende), timeout em segundos (default 120s), keepAliveTimeout em segundos (default 5s), maxHeadersCount (default 2000), headersTimeout em segundos (default 40s)",
		"_comments2": "eventLoopMonitor: ativa monitoramento do loop de eventos. Apenas para fins de analise de performance e testes (default: false)",
		"_comments3": "clustered: valor numerico e inteiro que indica o numero de processos executados no cluster. true / 0 para todos os processos possiveis",
		"_comments4": "se o servidor estiver ativo via proxy, valor de routePrefix deve se anexado tambem no inicio de virtualPath (pathVirtualStaticFiles)",
		"_comments5": "maxAge em pathVirtualStaticFiles em minutos",
		"_comments6": "secao custom (server) so e valida se alguma lib custom estiver sendo utilizada, fileUpload: maxFileSize em bytes, session: timeout em minutos"
	},
	"auth": {
		"sessWrapper": "userData",
		"authTipo": 1,
		"except": [
			"/",
			"/logon",
			"/islogged"
		],
		"_comments1": "authTipo => 2: toda rota livre, exceto except / Default: toda rota protegida, exceto except",
		"_comments2": "except => Except aceita rota parcial ou exata; utilizar / para separadores de grupos no caminho ex: /PATH1/PATH2"
	},
	"socketIo": {
		"serverProtocol": "http://",
		"serverHost": "localhost",
		"serverPort": 5001,
		"path": "/socket.io"
	},
	"crypto": {
		"hashAlgorithm": "sha512",
		"hashDigestEncoding": "hex",
		"cipherAlgorithm": "aes-192-cbc",
		"cipherKeyLen": 24
	},
	"db": {
		"msSqlServer": {
			"conexaoTipo": 1,
			"configSql": {
				"user": "user",
				"password": "pass",
				"server": "server",
				"port": 1433,
				"database": "database",
				"connectionTimeout": 15000,
				"requestTimeout": 15000,
				"stream": true,
				"parseJSON": true,
				"options": {
					"abortTransactionOnError": true,
					"enableArithAbort": true,
					"encrypt": false,
					"instanceName": ""
				},
				"pool": {
					"max": 10,
					"min": 0,
					"idleTimeoutMillis": 30000
				}
			},
			"_comments1": "conexaoTipo => 2: sem pool / Default: com pool"
		},
		"mongoose": {
			"connectionString": "mongodb://user:pass@10.28.10.21:27017/database?retryWrites=true&w=majority",
			"configDb": {
				"useNewUrlParser": true,
				"useFindAndModify": false,
				"useCreateIndex": true,
				"useUnifiedTopology": true,
				"serverSelectionTimeoutMS": 5000,
				"bufferMaxEntries": 0,
				"autoIndex": true,
				"keepAlive": true,
				"poolSize": 10,
				"connectTimeoutMS": 15000,
				"socketTimeoutMS": 45000,
				"authSource": "nodetest"
			},
			"configSchema": {
				"bufferCommands": false,
				"collation": {
					"locale": "pt",
					"strength": 2
				},
				"timestamps": {
					"createdAt": "dataCriacao",
					"updatedAt": "dataAlteracao"
				}
			},
			"_comments1": "authSource opcional"
		}
	},
	"email": {
		"queue": {
			"on": false,
			"saveFullLogs": false,
			"path": "/queue/mail/send",
			"fileExtension": ".send",
			"limitPerRound": 160,
			"timeCheck": 32000,
			"timeFirstCheck": 4000
		},
		"transporter": {
			"pool": true,
			"maxConnections": 5,
			"maxMessages": 160,
			"rateDelta": 1000,
			"rateLimit": 5,
			"socketTimeout": 64000,
			"host": "smtp.example.com",
			"port": 587,
			"secure": false,
			"auth": {
				"type": "login",
				"user": "user",
				"pass": "pass",
				"authMethod": "PLAIN"
			}
		},
		"_comments1": "limitPerRound: quantidade de envios por rodada, timeCheck: intervalo entre as rodadas, timeFirstCheck: primeira checagem antes de iniciar o loop de rodadas - serve tambem para evitar que os cluster realizem checagens na queue simultaneamente a cada timeCheck"
	}
}
