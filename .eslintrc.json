/*
	0 => rule off
	1 => rule on: warn (no exit)
	2 => rule on: error (exit with code 1)
*/
{
	"env": {
		"node": true,
		"es2020": true,
		"browser": false,
		"commonjs": true
	},
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "script"
	},
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"__serverRoot": "readonly",
		"__serverConfig": "readonly",
		"__serverWorker": "writable"
	},
	"extends": [
		"eslint:recommended",
		"plugin:node/recommended"
	],
	"rules": {
		"array-bracket-spacing": [
			2,
			"never"
		],
		"array-callback-return": 2,
		"arrow-body-style": [
			2,
			"always"
		],
		"arrow-parens": [
			2,
			"as-needed"
		],
		"arrow-spacing": [
			2,
			{
				"before": true,
				"after": true
			}
		],
		"block-scoped-var": 2,
		"block-spacing": [
			2,
			"always"
		],
		"brace-style": [
			2,
			"1tbs"
		],
		"camelcase": [
			2,
			{
				"properties": "always",
				"ignoreDestructuring": false,
				"ignoreImports": false
			}
		],
		"capitalized-comments": [
			2,
			"always",
			{
				"ignoreConsecutiveComments": true
			}
		],
		"class-methods-use-this": 2,
		"comma-dangle": [
			2,
			"never"
		],
		"comma-spacing": [
			2,
			{
				"before": false,
				"after": true
			}
		],
		"comma-style": [
			2,
			"last"
		],
		"computed-property-spacing": [
			2,
			"never"
		],
		"curly": 2,
		"dot-location": [
			2,
			"property"
		],
		"dot-notation": 2,
		"eol-last": 2,
		"eqeqeq": 2,
		"func-call-spacing": [
			2,
			"never"
		],
		"func-style": [
			2,
			"expression"
		],
		"function-paren-newline": [
			2,
			"consistent"
		],
		"implicit-arrow-linebreak": [
			2,
			"beside"
		],
		"indent": [
			2,
			"tab",
			{
				"MemberExpression": 0,
				"SwitchCase": 1,
				"ignoredNodes": ["TemplateLiteral > *"]
			}
		],
		"keyword-spacing": [
			2,
			{
				"before": true,
				"after": true
			}
		],
		"linebreak-style": [
			0,
			"windows"
		],
		"new-cap": 2,
		"no-array-constructor": 2,
		"no-async-promise-executor": 2,
		"no-confusing-arrow": 2,
		"no-console": 2,
		"no-else-return": 2,
		"no-empty-function": 2,
		"no-eq-null": 2,
		"no-eval": 2,
		"no-extra-bind": 2,
		"no-extra-label": 2,
		"no-extra-semi": 2,
		"no-fallthrough": 2,
		"no-floating-decimal": 2,
		"no-implicit-coercion": [
			2,
			{
				"boolean": true,
				"number": true,
				"string": true
			}
		],
		"no-implied-eval": 2,
		"no-lone-blocks": 2,
		"no-loop-func": 2,
		"no-mixed-operators": 2,
		"no-multi-assign": 2,
		"no-multi-spaces": 2,
		"no-multiple-empty-lines": [
			2,
			{
				"max": 1,
				"maxBOF": 0,
				"maxEOF": 0
			}
		],
		"no-new-func": 2,
		"no-new-object": 2,
		"no-new-wrappers": 2,
		"no-param-reassign": 2,
		"no-restricted-globals": 2,
		"no-return-assign": 2,
		"no-self-assign": 2,
		"no-self-compare": 2,
		"no-throw-literal": 2,
		"no-trailing-spaces": 2,
		"no-undef": 2,
		"no-undef-init": 2,
		"no-unneeded-ternary": 2,
		"no-unused-vars": [
			2,
			{
				"argsIgnorePattern": "^(req|res)$",
				"ignoreRestSiblings": true
			}
		],
		"no-use-before-define": [
			2,
			{
				"functions": true,
				"classes": true,
				"variables": false
			}
		],
		"no-useless-computed-key": 2,
		"no-useless-concat": 2,
		"no-useless-constructor": 2,
		"no-useless-rename": [
			2,
			{
				"ignoreDestructuring": false,
				"ignoreImport": false,
				"ignoreExport": false
			}
		],
		"no-useless-return": 2,
		"no-var": 2,
		"no-whitespace-before-property": 2,
		"node/no-callback-literal": 2,
		"node/exports-style": 2,
		"node/global-require": 2,
		"node/handle-callback-err": 2,
		"node/no-mixed-requires": 2,
		"node/no-missing-import": 2,
		"node/no-missing-require": 0,
		"node/no-new-require": 2,
		"node/no-path-concat": 2,
		"node/prefer-global/buffer": 2,
		"node/prefer-global/console": 2,
		"node/prefer-global/process": 2,
		"node/prefer-global/url-search-params": 2,
		"node/prefer-global/url": 2,
		"no-process-exit": 2,
		"node/no-sync": 2,
		"nonblock-statement-body-position": [
			2,
			"beside"
		],
		"object-curly-spacing": [
			2,
			"always",
			{
				"arraysInObjects": true,
				"objectsInObjects": true
			}
		],
		"object-shorthand": [
			2,
			"consistent"
		],
		"one-var": [
			2,
			{
				"var": "always",
				"let": "always",
				"const": "never"
			}
		],
		"operator-linebreak": [
			2,
			"after"
		],
		"padded-blocks": [
			2,
			"never"
		],
		"prefer-arrow-callback": 2,
		"prefer-const": 2,
		"prefer-promise-reject-errors": 2,
		"prefer-rest-params": 2,
		"prefer-spread": 2,
		"prefer-template": 2,
		"quotes": [
			2,
			"single"
		],
		"quote-props": [
			2,
			"as-needed"
		],
		"radix": [
			2,
			"always"
		],
		"require-atomic-updates": 2,
		"require-await": 2,
		"rest-spread-spacing": 2,
		"semi": [
			2,
			"always"
		],
		"semi-spacing": [
			2,
			{
				"before": false,
				"after": true
			}
		],
		"semi-style": [
			2,
			"last"
		],
		"space-before-blocks": [
			2,
			{
				"functions": "always",
				"keywords": "always",
				"classes": "always"
			}
		],
		"space-before-function-paren": [
			2,
			{
				"anonymous": "always",
				"named": "always",
				"asyncArrow": "always"
			}
		],
		"space-in-parens": [
			2,
			"never"
		],
		"space-infix-ops": 2,
		"spaced-comment": [
			2,
			"always"
		],
		"strict": [
			2,
			"global"
		],
		"template-curly-spacing": [
			2,
			"never"
		],
		"wrap-iife": [
			2,
			"inside"
		],
		"yoda": [
			2,
			"never"
		]
	}
}
