{
	"env": {
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly",
		"__serverRoot": "readonly",
		"__serverConfig": "readonly",
		"__serverWorker": "writable"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"strict": [2, "global"],
		"global-require": 2,
		"no-unused-vars": [2, { "argsIgnorePattern": "next|req|res" }],
		"vars-on-top": 2,
		"no-var": 2,
		"block-scoped-var": 2,
		"no-undef": 2,
		"semi": [2, "always"],
		"brace-style": [2, "1tbs"],
		"space-before-blocks": [2, { "functions": "always", "keywords": "always", "classes": "always" }],
		"arrow-spacing": [2, { "before": true, "after": true }],
		"block-spacing": [2, "always"],
		"curly": 2,
		"camelcase": [2, { "properties": "always" }],
		"comma-dangle": [2, "never"],
		"comma-spacing": [2, { "after": true, "before": false }],
		"dot-location": [2, "property"],
		"dot-notation": 2,
		"func-style": [2, "expression"],
		"linebreak-style": [2, "windows"],
		"quotes": [2, "single"],
		"eqeqeq": 2,
		"no-eval": 2,
		"no-extra-bind": 2,
		"no-useless-return": 2,
		"no-async-promise-executor": 2,
		"array-callback-return": 2
	}
}
