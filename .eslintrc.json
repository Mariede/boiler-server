{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "__serverRoot": "readonly",
        "__serverConfig": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-unused-vars": [2, { "argsIgnorePattern": "next|req|res" }],
        "semi": [2, "always"],
        "brace-style": [2, "1tbs"],
        "block-spacing": [2, "always"],
        "curly": [2],
        "camelcase": [2, { "properties": "always" }],
        "comma-dangle": [2, "never"],
        "comma-spacing": [2, { "after": true, "before": false }],
        "no-var": [2],
        "no-undef": [2],
        "strict": [2, "global"],
        "dot-location": [2, "property"],
        "dot-notation": [2],
        "eqeqeq": [2],
        "no-eval": [1],
        "no-extra-bind": [2],
        "no-useless-return": [2],
        "vars-on-top": [2],
        "no-async-promise-executor": [2],
        "array-callback-return": [2]
    }
}
