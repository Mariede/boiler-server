{
	"server": {
		"host": "localhost",
		"port": 5000,
		"routePrefix": "/",
		"pathVirtualStaticFiles": [{ "virtualPath": "/img", "physicalPath": "/views/_home/images" }],
		"pathFavicon": "/views/_home/images/favicon.ico",
		"logFileName": "logs-server.log",
		"logMailQueueFileName": "logs-mail-queue.log",
		"cors": {
			"origin": "*",
			"methods": ["GET","HEAD","PUT","PATCH","POST","DELETE"],
			"preflightContinue": false,
			"optionsSuccessStatus": 204,
			"credentials": true
		},
		"fileUpload": {
			"path": "/uploads",
			"allowedExtensions": ".gif:image/gif | .jpeg:image/jpeg | .jpg:image/jpeg | .png:image/png | .pdf:application/pdf | .txt:text/plain | .doc:application/msword | .docx:application/vnd.openxmlformats-officedocument.wordprocessingml.document",
			"maxFileSize": 5242880
		},
		"session": {
			"secret": ["SegredoIDCookies123", "Reforco1", "Reforco2"],
			"secretStore": "SegredoArquivos123",
			"cookieName": "cookie-server",
			"timeout": 20
		},
		"_comments1": "Se o servidor estiver 'proxyado' por uma porta 80, valor de routePrefix deve se anexado tambem no inicio de virtualPath (pathVirtualStaticFiles)",
		"_comments2": "fileUpload: maxFileSize em bytes, session: timeout em minutos"
	},
	"auth": {
		"sessWrapper": "userData",
		"authTipo": 1,
		"except": [
			"/",
			"/favicon.ico",
			"/login",
			"/islogged"
		],
		"_comments1": "authTipo => 2: toda rota livre, exceto except / Default: toda rota protegida, exceto except",
		"_comments2": "except => Except aceita rota parcial ou exata; utilizar / para separadores de grupos no caminho ex: /PATH1/PATH2"
	},
	"crypto": {
		"hashAlgorithm": "sha512",
		"hashDigestEncoding": "hex",
		"cipherAlgorithm": "aes-192-cbc",
		"cipherKeyLen": 24
	},
	"db": {
		"conexaoTipo": 1,
		"configSql": {
			"user": "user",
			"password": "pass",
			"server": "server",
			"port": 1433,
			"database": "database",
			"connectionTimeout": 15000,
			"requestTimeout": 15000,
			"stream": true,
			"parseJSON": true,
			"pool": {
				"max": 10,
				"min": 0,
				"idleTimeoutMillis": 30000
			}
		},
		"_comments1": "conexaoTipo => 2: sem pool / Default: com pool"
	},
	"email": {
		"queue": {
			"path": "/mail/queue",
			"fileExtension": ".send",
			"timeCheck": 30000
		},
		"transporter": {
			"pool": false,
			"host": "smtp.example.com",
			"port": 587,
			"secure": false,
			"auth": {
				"type": "login",
				"user": "user",
				"pass": "pass",
				"authMethod": "PLAIN"
			}
		},
		"_comments1": "secure: true => port 465 / secure: false => port 587 or 25",
		"_comments2": "queue de e-mails usa as pastas fixas send e sent para enfileiramento",
		"_comments3": "timeCheck tem um valor default minimo de 15 segundos (ou 15000)"
	}
}
