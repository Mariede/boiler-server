{
	"server": {
		"host": "localhost",
		"port": 5000,
		"routePrefix": "/",
		"pathVirtualStaticFiles": "/img",
		"logFileName": "logs-server.log",
		"cors": {
			"origin": "*",
			"methods": ["GET","HEAD","PUT","PATCH","POST","DELETE"],
			"preflightContinue": false,
			"optionsSuccessStatus": 204
		},
		"session": {
			"secret": ["SegredoIDCookies123", "Reforco1", "Reforco2"],
			"secretStore": "SegredoArquivos123",
			"cookieName": "cookie-server"
		}
	},
	"auth": {
		"sessWrapper": "userData",
		"authTipo": "1",
		"except": [
			"/",
			"/favicon.ico",
			"/login",
			"/islogged"
		],
		"comments - authTipo": "2: toda rota livre, exceto except / Default: toda rota protegida, exceto except",
		"comments - except": "Except aceita rota parcial ou exata * utilizar / para separadores de grupos no caminho ex: /PATH1/PATH2 *"
	},
	"db": {
		"conexaoTipo": 1,
		"configSql": {
			"user": "user",
			"password": "pass",
			"server": "server",
			"port": 1433,
			"database": "database",
			"connectionTimeout": 15000,
			"requestTimeout": 15000,
			"stream": true,
			"parseJSON": true,
			"pool": {
				"max": 10,
				"min": 0,
				"idleTimeoutMillis": 30000
			}
		},
		"comments - conexaoTipo": "2: sem pool / Default: com pool"
	}
}
